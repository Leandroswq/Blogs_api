{
  "name": "blogs-api",
  "version": "0.1.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "engineStrict": true,
  "private": true,
  "dependencies": {
    "and": "^0.0.3",
    "cors": "^2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-async-errors": "^3.1.1",
    "http-errors": "^2.0.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "mysql2": "2.1.0",
    "sequelize": "6.3.4",
    "shelljs": "0.8.4",
    "swagger-autogen": "^2.21.5",
    "swagger-ui-express": "^4.5.0",
    "yamljs": "^0.3.0"
  },
  "main": "src/server.js",
  "scripts": {
    "prestart": "npx sequelize-cli db:create && npx sequelize-cli db:migrate",
    "start": "node .",
    "drop": "npx sequelize-cli db:drop",
    "seed": "npx sequelize-cli db:seed:all",
    "debug": "nodemon .",
    "lint": "eslint --no-inline-config --no-error-on-unmatched-pattern -c .eslintrc.json .",
    "swagger-autogen": "node swagger.js",

    "compose:prestart": "docker exec -it blogs_api npm run prestart" ,
    "container:start": "docker exec -it blogs_api npm start" ,
    "compose:down": "docker-compose down",
    "compose:up": "docker-compose up -d --build",
    "compose": "npm run compose:down && npm run compose:up",
    "compose:start": "npm run compose && sleep 40  && npm run container:start",
    "container:drop": "docker exec -it blogs_api npm run drop",
    "container:seed": "docker exec -it blogs_api npm run seed",
    "container:debug": "docker exec -it blogs_api npm run debug"
  },
  "devDependencies": {
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-trybe-backend": "1.0.3",
    "eslint-plugin-import": "2.22.1",
    "frisby": "2.1.2",
    "jest": "26.0.1",
    "jest-each": "^28.0.1",
    "nodemon": "^2.0.15",
    "sequelize-cli": "6.2.0",
    "sequelize-jest-helpers": "^1.0.2",
    "supertest": "4.0.2",
    "wait-on": "^6.0.1"
  }
}
